depend() {
	need localmount
	after bootmisc
}

start() {
	ebegin "Starting irqbalance"
	start-stop-daemon --start --exec /usr/sbin/irqbalance \
		--pidfile /var/run/irqbalance.pid
	eend $?
}

stop() {
	ebegin "Stopping irqbalance"
	start-stop-daemon --stop --exec /usr/sbin/irqbalance \
		--pidfile /var/run/irqbalance.pid
	eend $?
}
